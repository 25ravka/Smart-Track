<body>
    <!-- Corner Logos -->
    <div class="corner-logo top-left">
        <img src="Swadam.png" alt="Swadam Logo" class="swadam-logo">
    </div>

    <div class="corner-logo top-right">
        <img src="Swadam.png" alt="Swadam Logo" class="swadam-logo">
    </div>

    <div class="corner-logo bottom-left">
        <img src="Smart Track.png" alt="Smart Track Logo" class="smart-track-logo">
    </div>

    <div class="corner-logo bottom-right">
        <img src="Smart Track.png" alt="Smart Track Logo" class="smart-track-logo">
    </div>

    <!-- Main Content -->
    <div class="main-container">
        <div class="auth-form">
            <h1 class="main-title">Two Factor Authentication</h1>
            <p class="subtitle">Enter the code sent to your email</p>

            <form onsubmit="handleSubmit(event)">
                <div class="form-group">
                    <label class="form-label">Enter Email:</label>
                    <input type="email" class="email-input" placeholder="your.email@example.com" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Enter Code:</label>
                    <div class="code-container">
                        <input type="text" class="code-input" maxlength="1" oninput="moveToNext(this, 0)">
                        <input type="text" class="code-input" maxlength="1" oninput="moveToNext(this, 1)">
                        <input type="text" class="code-input" maxlength="1" oninput="moveToNext(this, 2)">
                        <input type="text" class="code-input" maxlength="1" oninput="moveToNext(this, 3)">
                        <input type="text" class="code-input" maxlength="1" oninput="moveToNext(this, 4)">
                    </div>
                </div>

                <button type="submit" class="enter-button">Enter</button>
            </form>
        </div>
    </div>

    <script>
        function moveToNext(current, index) {
            const inputs = document.querySelectorAll('.code-input');
            
            // Auto-move to next input
            if (current.value.length === 1 && index < inputs.length - 1) {
                inputs[index + 1].focus();
            }
            
            // Move back on backspace
            current.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && current.value === '' && index > 0) {
                    inputs[index - 1].focus();
                }
            });
        }

        function handleSubmit(event) {
            event.preventDefault();
            
            const email = document.querySelector('.email-input').value;
            const codeInputs = document.querySelectorAll('.code-input');
            const code = Array.from(codeInputs).map(input => input.value).join('');
            
            if (code.length !== 5) {
                alert('Please enter the complete 5-digit code');
                return;
            }
            
            // Simulate authentication
            const button = document.querySelector('.enter-button');
            button.textContent = 'Verifying...';
            button.disabled = true;
            
            setTimeout(() => {
                alert(`Authentication successful!\nEmail: ${email}\nCode: ${code}`);
                button.textContent = 'Enter';
                button.disabled = false;
            }, 1500);
        }

        // Add number-only restriction to code inputs
        document.querySelectorAll('.code-input').forEach(input => {
            input.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        });

        // Focus first code input when page loads
        window.addEventListener('load', function() {
            document.querySelector('.code-input').focus();
        });
    </script>
</body>
